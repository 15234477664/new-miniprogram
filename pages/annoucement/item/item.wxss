.item {
  display: flex;
  flex-direction: column;
  background-color: white;
}
.top {
  display: flex;
  flex-direction: column;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-top: 30rpx;
  padding-bottom: 6rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f3f4f8;
}
.top .row {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #333;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}
.top .row .title {
  flex: 1;
  color: #666;
  padding: 0 12rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.look-btn {
  background-color: white;
  padding: 24rpx;
  text-align: center;
  color: #008eff;
  font-size: 30rpx;
}